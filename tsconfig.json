{
  "version": "2.3.3",
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    //"sourceMap": false,
    //"declaration": true,
    "outDir": "dist",
    "removeComments": false,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "files": [
    "src/global.d.ts",
    "src/main.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
